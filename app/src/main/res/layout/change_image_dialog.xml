<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center | top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_take_a_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
            android:drawablePadding="6dp"
            android:drawableTint="#444"
            android:gravity="left | center"
            android:onClick="getImageFromCamera"
            android:text="Take a photo" />

        <Button
            android:id="@+id/btn_choose_from_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_photo_black_24dp"
            android:drawablePadding="6dp"
            android:drawableTint="#444"
            android:gravity="left | center"
            android:text="choose from gallery"
            android:onClick="getImageFromGallery"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>